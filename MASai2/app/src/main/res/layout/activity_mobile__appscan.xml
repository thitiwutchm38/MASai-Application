<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mobile_Appscan"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/imageView_mobile_app_scan"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:srcCompat="@drawable/mobile_app_scan" />

        <TextView
            android:id="@+id/textView_App_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:gravity="center_horizontal"
            android:text="Choose your app"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="horizontal">


            <SearchView
                android:id="@+id/SearchView_GooglePlay"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                android:queryHint="Search from GooglePlay"/>

            <ListView
                android:id="@+id/listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/SearchView_GooglePlay"
                android:scrollbars="vertical"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/imageView_googleplay_icon"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="294dp"
                android:layout_marginTop="1dp"
                app:srcCompat="@drawable/playstore" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="411dp"
            tools:layout_editor_absoluteY="350dp">

            <SearchView
                android:id="@+id/SearchView_search_apk"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:iconifiedByDefault="false"
                android:queryHint="Upload your apk file "/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="visible"
                app:srcCompat="@drawable/folder" />

        </LinearLayout>

        <Button
            android:id="@+id/button_rescan"
            android:layout_width="356dp"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:layout_weight="0"
            android:background="@drawable/button_background"
            android:text="Scan" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>